<%- include('partials/header.ejs') %>
<body>
  <%- include('partials/navbar.ejs') %>
  <div class="container">
    <div id="form-ask" class="card">
      <div class="card-header">
        <h3>Realizar Pergunta</h3>
      </div>
      <div class="card-body">
        <form method="POST" action="/savequestion">
          <div class="mb-3">
            <label class="form-label">Dúvida</label>
            <input class="form-control" type="text" placeholder="Título da dúvida" name="titulo">
          </div>
          <div class="mb-3">
            <label class="form-label">Descrição</label>
            <textarea class="form-control" placeholder="Descreva a sua dúvida..." rows="2" name="descricao"></textarea>
          </div>
          <button class="btn btn-primary"><i class="bi bi-arrow-right-circle"></i>Perguntar</button>
        </form>
      </div>
    </div>
  </div>
</body>
<%- include('partials/footer.ejs') %>